<div class="contain-to-grid hide-for-small">
  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <%= render "layouts/logo" %>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <% if current_user %>
          <li class="has-dropdown not-click">
            <%= link_to "#" do %>
              <%= image_tag current_user.image, class: "image-topbar" %>
              <span><%= current_user.name %></span>
            <% end %>
            <ul class="dropdown">
              <%= render "layouts/navigation_links" %>
            </ul>
          </li>
        <% end %>
      </ul>
    </section>
  </nav>
</div>
