<%= form_for @team, url: url do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <% unless @team.persisted? && @team.enrolling? %>
    <%= f.label :enrolling %>
    <%= f.check_box :enrolling %>
  <% end %>

  <%= f.submit %>
<% end %>
