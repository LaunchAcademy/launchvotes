<div class="row">
  <div class="form-wrapper large-6 large-offset-3 medium-8 medium-offset-2 small-12 columns">

    <div class="row">
      <div class="small-8 small-offset-2">
        <%= form_for @team, url: url do |f| %>
          <%= render 'shared/error_messages', object: f.object %>

          <h3 class="text-center">Team Name</h3>
          <%= f.text_field :name %>

          <% unless @team.persisted? && @team.enrolling? %>
            <%= f.label :enrolling, class: "left" %>
            <%= f.check_box :enrolling, class: "left" %>
          <% end %>

          <%= f.submit class: "button-hollow-white expand small" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
